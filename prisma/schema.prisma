// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Calendar {
  date                 DateTime @id
  completionPercantage Int      @default(0)
  taskList             Tasks[]
}

model Tasks {
  id Int @id @default(autoincrement())
  calendar Calendar @relation(fields:[date], references: [date])
  date DateTime
  task  String
  isDone Boolean @default(false)
}
